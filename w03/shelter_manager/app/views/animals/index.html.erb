<%= link_to 'Add Animal', new_animal_path %>

<table>
	<tr>
		<th>Name</th>
		<th>Species</th>
		<th colspan="3"></th>
	</tr>

	<% @animals.each do |animal| %>
	<tr>
		<td><%= animal.name %></td>
		<td><%= animal.species %></td>
		<td><%= link_to 'Show', animal_path(animal) %></td>
		<td><%= link_to 'Edit', edit_animal_path(animal) %></td>
		<td><%= link_to 'Destroy', animal_path(animal),
			method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
		<% end %>
	</table>